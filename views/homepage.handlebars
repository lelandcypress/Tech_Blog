<!-- Loop over each object in the projects array -->
{{#each articles as |article| }}
<div class="row mb-4 project">
    <div class="col-md-5">
        <h2>
            <a href="/article/{{article.id}}">{{article.title}}</a>
        </h2>
        
        <p>Created by {{user.name}}  {{format_date article.date_created}}</p>
    </div>
    <div class="col-md-7">
        <p>
            {{article.content}}
        </p>
    </div>
</div>
{{/each}}